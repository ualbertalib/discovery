    <title>University of Alberta Libraries</title>
    <%= opensearch_description_tag application_name, opensearch_catalog_url(:format => 'xml') %>
    <%# favicon_link_tag asset_path('favicon.ico') %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    "application", "https://fonts.googleapis.com/css?family=Open+Sans:400,700,400italic|Abel", "sticky-footer", "ualib-discovery", media: "all" %>
    <%= javascript_include_tag "application", "stupidtable", "ualib-discovery" %>
