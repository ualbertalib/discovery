<% # bookmark/folder functions -%>
  <% @display_title = document.to_h["title_display"].first %>
       <% document.to_h['subtitle_display'] ? @subtitle = ": #{document.to_h['subtitle_display'].first}" : @subtitle = "" %>
       <% document.to_h['edition_tesim'] ? @edition = ", #{document.to_h['edition_tesim'].first}" : @edition = "" %>
       <% document.to_h['section_name_tesim'] ? @section = ". #{document.to_h['section_name_tesim'].first}" : @section = "" %>
       <% document.to_h['section_number_tesim'] ? @section_number = " #{document.to_h['section_number_tesim'].first.gsub(",","")}" : @section_number = "" %>
       <% document.to_h['title_display'].nil? ? @combined_title = "Untitled document" : @combined_title = document.to_h['title_display'].first+@subtitle+@section_number+@section+@edition %>

<h1>
  <%= "#{@combined_title}" %>
</h1>
