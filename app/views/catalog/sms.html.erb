<div class="modal-header col-12">
  <h1 class="modal-title"><%= t('text_this') %></h1>
  <button type="button" class="ajax-modal-close close" data-dismiss="modal" aria-hidden="true">Ã—</button>
</div>

<%= form_tag url_for(controller: 'catalog', action: 'sms'),
             id: 'sms_form',
             class: 'ajax_form col-12',
             method: :post do %>
  <div class="modal-body">
    <%= render partial: '/flash_msg' %>
    <div class="form-group">
      <div style="display:none">
        <%= text_field_tag :call, params[:call], class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="to">
        <%= t('blacklight.sms.form.to') %>
      </label>
      <div class="col-sm-10 phone-number-input">
        <%= text_field_tag :to, params[:to], class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="carrier">
        <%= t('blacklight.sms.form.carrier') %>
      </label>
      <div class="col-sm-10">
        <%= select_tag(:carrier, options_for_select(sms_mappings.to_a.sort.unshift([t('blacklight.sms.form.carrier_prompt'), '']), params[:carrier]), class: 'form-control') %><br />
      </div>
    </div>
    <% @documents.each do |doc| %>
      <%= hidden_field_tag 'id[]', doc[:id] %>
    <% end %>
  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary"> <%= t('blacklight.sms.form.submit') %></button>
  </div>
<% end %>
