<div class="row">
  <h1><%= t('.header') %></h1>
  <p><%= t('.lead_html') %></p>
  <p><%= t('.review_policy_html') %></p>
</div>

<div class="row col-12">
  <%= bootstrap_form_for(@bpsc_read_on_site_request) do |f| %>
    <%= f.text_field :name, required: true %>
    <%= f.email_field :email, required: true %>
    <%= f.text_field :appointment_time, label: t('.date_of_planned_visit').html_safe, required: true %>
    <%= f.text_field :title, required: true %>
    <%= f.text_field :call_number, label: t('.call_number'), required: true %>
    <%= f.text_field :item_url, label: t('item_url'), help: t('item_url_help'), required: true %>

    <%= f.text_area :notes,
                    label: t('additional_notes'),
                    rows: 7,
                    cols: 45 %>

    <%= f.hidden_field :referer, value: @bpsc_read_on_site_request.referer %>

    <%= f.primary t('request_viewing') %>
  <% end %>
</div>
